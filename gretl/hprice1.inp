open "../data/hprice1.gdt"
list X = bedrooms colonial lotsize size

outfile hprice1-a.txt
  ols price 0 X
end outfile


# b)

outfile hprice1-b.txt
  ols price 0 X \
  --robust
end outfile


# c)
outfile hprice1-c1.txt
  modtest --breusch-pagan --robust
end outfile

outfile hprice1-c2.txt
  modtest --white
end outfile

# d)
outfile hprice1-d1.txt
  w = 1 / lotsize
end outfile

outfile hprice1-d2.txt
wls w price 0 X
end outfile

outfile hprice1-d3.txt
  wls w price 0 X --robust
end outfile


# e)
ols price 0 X --quiet

lusq = log($uhat * $uhat)

outfile hprice1-e1.txt
  ols lusq 0 X
end outfile

h = exp($yhat)
w = 1 / h

outfile hprice1-e2.txt
  wls w price 0 X --robust
end outfile
